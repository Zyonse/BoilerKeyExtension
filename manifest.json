{
  "manifest_version": 3,
  "name": "BoilerKey Helper",
  "description": "An extension that alleviates Purdue's BoilerKey two-factor authentication.",
  "author": "The Purdue Community",
  "version": "1.11",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://purdue.brightspace.com/*",
        "https://sso.purdue.edu/idp/profile/cas/login*"
      ],
      "js": [
        "jsOTP.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"    
  },
  "action": {
    "default_icon": "icons/icon128.png",
    "default_title": "BoilerKey Helper",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api-1b9bef70.duosecurity.com/*"
  ]
}
